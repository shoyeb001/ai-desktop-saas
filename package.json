{
  "name": "ai-social-desktop",
  "version": "1.0.0",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm --prefix frontend run dev\" \"npm run electron-dev\"",
    "electron-dev": "electron electron/main.js",
    "build:frontend": "npm --prefix frontend run build",
    "dist": "npm run build:frontend && electron-builder"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^39.2.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.yourcompany.aisocialdesktop",
    "productName": "AISocialDesktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "icon": "icon.icns"
    }
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "dotenv": "^17.2.3",
    "lowdb": "^7.0.1",
    "uuid": "^13.0.0"
  }
}